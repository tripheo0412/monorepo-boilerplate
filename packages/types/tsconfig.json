{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"declaration": true,
		"strictNullChecks": true
	},
	"include": ["./src"],
	"exclude": ["node_modules"]
}
